<tr>
  <%= form_for @expenditure, :html => { class: "needs-validation" } do |f| %>
  <td class="align-middle">
  <%= f.text_field :amount, style: "width: 70px;", class: "form-control" %>
  </td>

  <td class="align-middle">
  <%= f.text_field :title, class: "form-control" %>
  </td>

  <td class="align-middle">
  <%= f.text_field :category, style: "width: 150px", class: "form-control" %>
  </td>

  <td class="align-middle">
    <%= f.date_field :date, style: "width: 150px",
                            value: Time.zone.today,
                            class: "form-control" %>
  </td>

  <td>
  <%= f.submit "Add", class: "btn btn-primary" %>
  </td>
  <% end %>
</tr>
