<div class="row justify-content-center">
  <div class="col-4">
    Your custom categories
    <table>
      <thead>
        <th>Parent category</th>
        <th>Name</th>
      </thead>
      <tbody>
        <% @user_categories.each do |category| %>
          <tr>
            <td><%= category.parent_category.name %></td>
            <td><%= category.name %></td>
            <td><%= link_to 'delete', user_category_path(category), method: :delete %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="col-2">
    <%= form_for @custom_category, url: user_categories_path do |f| %>
      <div class="form-group">
      <%= f.label :parent_id %>
      <%= f.collection_select :parent_id,
        @categories,
        :id, :name,
        {},
        { class: "form-control custom-select" } %>
      </div>

      <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
      </div>

      <%= f.submit class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
